                <Button x:Name="ButtonCalendar15" Content="Button" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Stretch" Height="auto" />
                <Button x:Name="ButtonCalendar16" Content="Button" Grid.Column="3" Grid.Row="4" HorizontalAlignment="Stretch" Height="auto" />
