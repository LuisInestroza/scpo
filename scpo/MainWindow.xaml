                <Button x:Name="ButtonCalendar6" Content="Button" Grid.Column="7" Grid.Row="2" HorizontalAlignment="Stretch" Height="auto" />
                <Button x:Name="ButtonCalendar7" Content="Button" Grid.Column="8" Grid.Row="2" HorizontalAlignment="Stretch" Height="auto" />
                <Button x:Name="ButtonCalendar8" Content="Button" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Stretch" Height="auto" />
